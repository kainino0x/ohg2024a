{
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "hostRequirements": {
    "cpus": 4
  },
  "waitFor": "onCreateCommand",
  "updateContentCommand": "npm ci",
  "postCreateCommand": "",
  "postAttachCommand": {
    "server": "npm start"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "vscodevim.vim",
        "esbenp.prettier-vscode"
      ]
    }
  },
  "forwardPorts": [
    8080
  ]
}